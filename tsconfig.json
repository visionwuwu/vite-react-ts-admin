{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client", "jest"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "root/*": ["*"],
      "@/*": ["src/*"],
      "utils/*": ["src/utils/*"],
      "comps/*": ["src/components/*"],
      "views/*": ["src/views/*"],
      "store/*": ["src/store/*"],
      "hooks/*": ["src/hooks/*"],
      "assets/*": ["src/assets/*"],
      "styles/*": ["src/styles/*"],
      "apis/*": ["src/api/*"],
      "mock/*": ["mock/*"]
    }
  },
  "include": ["./src", "mock/index.ts", "tests"]
}
